<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_miniplayer"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/popup_box"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/channelView"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/channel_image"
        app:srcCompat="@drawable/ic_no_image_light" />

    <TextView
        android:id="@+id/channelText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:contentDescription="@string/channel_name"
        android:gravity="start|center_vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:text="@string/channel_name"
        android:textAlignment="gravity"
        android:textSize="16sp" />

    <ToggleButton
        android:id="@+id/favoriteButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="0"
        android:button="@drawable/toggle_like"
        android:contentDescription="@string/favorite_button"
        android:textOff=""
        android:textOn="" />

    <ImageButton
        android:id="@+id/playButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="0"
        android:contentDescription="@string/play_button"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_play_light" />

</androidx.appcompat.widget.LinearLayoutCompat>